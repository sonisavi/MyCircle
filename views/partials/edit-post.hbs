<div class="modal fade" id="editPostModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">UPDATE POST</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form  id="editMyPost" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="col-md">
                        <div class="form-label">
                            <label for="title">Title</label>
                            <input type="text" class="form-control w-auto" value="" name="old-title" id="old-title">
                        </div>
                        <div class="form-label">
                            <label for="description">Description</label>
                            <textarea name="" class="form-control " name="description" id="old-desc" cols="20"
                                rows="5"></textarea>

                        </div>
                        <div class="form-label">
                            <label for="image">Image</label>
                            <input type="file" class="form-control w-auto" name="edit-post-img" id="old-image">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="edit-post" >Post</button>
                </div>
            </form>
        </div>
    </div>
</div>
